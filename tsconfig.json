{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@hasura": ["./apis/hasura/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "**/__mocks__/*"]
}
